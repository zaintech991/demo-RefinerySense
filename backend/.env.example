# Database Configuration
# SQLite (default) - for development
DATABASE_URL=sqlite:///./refinery_sense.db

# PostgreSQL (for production) - uncomment and configure
# DATABASE_URL=postgresql://user:password@localhost:5432/refinery_sense

# Groq API Configuration
# Get your API key from https://console.groq.com/
# Leave empty if not using AI Assistant feature
GROQ_API_KEY=your_groq_api_key_here

# Groq Model Configuration
# Available models: llama3-70b-8192, llama3-8b-8192, mixtral-8x7b-32768, gemma-7b-it
GROQ_MODEL=llama3-70b-8192

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Data Simulation Configuration
# Set to false to disable automatic data simulation
SIMULATION_ENABLED=true
# Interval in seconds between simulated sensor readings
SIMULATION_INTERVAL_SECONDS=3
